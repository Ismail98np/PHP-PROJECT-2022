{%extends 'base.html.twig' %}

 {% block title %}All Students{% endblock title %}

{% block body %}
<h1>All Students</h1>
{% if students%}
<table id="table" class="table table-striped">
    <thead>
      <tr>
        <th>Student Name</th>
        <th>Student Email</th>
        <th>Student Phone</th>
      </tr>
    </thead>
    <tbody>
      {% for x in students %}
        <tr>
          <td>{{ x.name }}</td>
          <td>{{ x.email }}</td>
          <td>{{ x.phone }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <a href="/student" class="btn btn-info vertical-center" role="button">Go Back</a>
{% else %}
  <p>No instrutors to display</p>
  <a href="/student" class="btn btn-info vertical-center" role="button">Go Back</a>
{% endif %}
{% endblock %}

{%block javascripts%}
<script src ="/js/main.js"></script>
{% endblock %}